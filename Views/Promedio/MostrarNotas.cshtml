@using Sistema_de_Calificaciones.Models
@model List<Promedios>
@{
    ViewBag.Title = "MostrarNotas";
    var IdMateria = (int)ViewBag.IdMateria;
}



<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center>
                <h1>Lista de notas</h1>
            </center>
            <br />
            <button class="btn btn-default" onclick="window.location.href='/Promedio/AgregarNotas?IdMateria='+@IdMateria">Agregar Notas</button>
            <br />
            <br />
            <button class="btn btn-default" onclick="window.location.href='/Reportes/ImprimirNotasPorMateria?idMateria=' +@IdMateria">Imprimir notas</button>
            <br />
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Alumno</th>
                        <th>Nota 1</th>
                        <th>Nota 2</th>
                        <th>Nota 3</th>
                        <th>Promedio</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var notas in Model)
                        {
                    <tr>
                        <td>@notas.NombreAlumno</td>
                        <td>@notas.Nota1</td>
                        <td>@notas.Nota2</td>
                        <td>@notas.Nota3</td>
                        <td>@notas.Promedio</td>
                        <td @if (notas.Promedio >= 6) { <text> class="text-sucess" </text>  } else { <text> class="text-danger" </text> }>@notas.Estado</td>
                    </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">
                                <center>
                                    <label class="text-danger">
                                        ¡No hay datos para mostrar!
                                    </label>
                                </center>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

