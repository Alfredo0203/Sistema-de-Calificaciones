
@using Sistema_de_Calificaciones.Models;
@model List<Materias>
@{
    ViewBag.Title = "MostrarMaterias";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center>
                <h1>Lista de Materias</h1>
            </center>
            <br />

            <button class="btn btn-default" onclick="window.location.href='/Materia/CreateOrEditMaterias'">Agregar</button> 
            <table class="table table-hover">
               <thead>
                   <tr>
                       <th>Id Materia</th>
                       <th>Nombre </th>
                       <th>Código</th>
                       <th></th>
                   </tr>
               </thead>
                <tbody>
                    
                   @if(Model.Count() > 0)
                   {
                       foreach (var materia in Model)
                       {
                <tr>
                    <th>@materia.IdMateria</th>
                    <th>@materia.NombreMateria</th>
                    <th>@materia.CodigoMateria</th>
                    <th>
                        <button class="btn btn-success" onclick="window.location.href='/Materia/CreateOrEditMaterias?idMateria=' + @materia.IdMateria">Editar</button>
                        <button class="btn btn-danger" onclick="window.location.href='/Materia/EliminarMateria?idMateria=' +@materia.IdMateria">Eliminar</button>
                    </th>

                </tr>
                       }
                   } else
            {
               <tr>
                   <td colspan="4">
                       <center>
                           <label>¡No hay datos para mostrar!</label>
                       </center>
                   </td>
               </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>

