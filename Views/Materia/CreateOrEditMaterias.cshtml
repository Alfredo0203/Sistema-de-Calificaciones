@using Sistema_de_Calificaciones.Models;
@model Materias
@{
    ViewBag.Title = "CreateOrEditMaterias";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center>
                <h1>Agregar Materia</h1>
            </center>
            <br />

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(X => X.IdMateria)
<div class="col-md-6">
    <div class="form-group">
        <label class="control-label">Nombre</label>
        @Html.TextBoxFor(x => x.NombreMateria, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CodigoMateria, null, htmlAttributes: new { @class = "text-danger"})
    </div>

    <div class="form-group">
        <label class="control-label">Codigo materia</label>
        @Html.TextBoxFor(x => x.CodigoMateria, htmlAttributes: new {@class = "form-control"})
        @Html.ValidationMessageFor(x => x.CodigoMateria, null, htmlAttributes: new {@class ="txt-danger"})
    </div>
    <div class="form-group">
        <button class=" btn btn-success">Guardar</button>
    </div>
</div>
            }
            <h1></h1>
        </div>
    </div>
</div>
