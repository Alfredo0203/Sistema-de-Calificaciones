@using Sistema_de_Calificaciones.Models;
@model Users
@{
    ViewBag.Title = "Login";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center><h1>Iniciar Sesión</h1></center>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Usuario</label>
                    @Html.TextBoxFor(x => x.nombreUsuario, htmlAttributes: new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Contraseña</label>
                    @Html.TextBoxFor(x => x.Password, htmlAttributes: new { @class = "form-control" })
                </div>

                <div class="form-group">
<input type="submit" class="btn btn-default" value="Ingresar"/>
               </div>
            }
        </div>
    </div>
</div>

